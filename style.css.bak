* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: #111827;
    color: #f3f4f6;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    padding: 15px;
    min-height: 100vh;
}

.container {
    max-width: 440px;
    margin: 0 auto;
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    flex-wrap: wrap;
    gap: 10px;
}

h1 {
    color: #60a5fa;
    font-size: 24px;
}

.reset-btn {
    background-color: #dc2626;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
}

.reset-btn:hover {
    background-color: #b91c1c;
}

.module {
    background-color: #1f2937;
    border-radius: 4px;
    padding: 6px;
    margin-bottom: 6px;
    position: relative;
}

.module-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
}

.module h2 {
    color: #93c5fd;
    font-size: 14px;
}

.delete-btn {
    background-color: transparent;
    color: #f87171;
    border: none;
    padding: 6px;
    cursor: pointer;
    border-radius: 3px;
    font-size: 12px;
    line-height: 1;
}

.delete-btn:hover {
    background-color: #374151;
}

.level {
    margin-bottom: 12px;
}

.level:last-child {
    margin-bottom: 0;
}

.level h3 {
    color: #d1d5db;
    font-size: 14px;
    margin-bottom: 6px;
}

.resource {
    background-color: #374151;
    padding: 16x;
    border-radius: 6px;
    margin-bottom: 4px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: opacity 0.3s;
    gap: 4px;
}

.resource:last-child {
    margin-bottom: 0;
}

.resource.completed {
    opacity: 0.5;
}

.resource-name {
    font-weight: 500;
    color: #e5e7eb;
    flex: 1;
    min-width: 100px;
    font-size: 14px;
	margin-left: 6px;
}

.resource-controls {
    display: flex;
    align-items: center;
    gap: 6px;
}

.control-btn {
    background-color: #4b5563;
    color: white;
    border: none;
    width: 18px;
    height: 18px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.control-btn:hover {
    background-color: #6b7280;
}

.collected-input {
    width: 40px;
    text-align: center;
    background-color: #4b5563;
    border: 1px solid #6b7280;
    border-radius: 4px;
    padding: 4px;
    color: white;
    font-size: 14px;
}

.required-amount {
    color: #9ca3af;
    min-width: 28px;
    text-align: center;
    font-size: 14px;
}

@media (max-width: 900px) {
    body {
        padding: 10px;
    }

    h1 {
        font-size: 20px;
    }

    .module {
        padding: 10px;
        margin-bottom: 10px;
    }

    .module h2 {
        font-size: 14px;
    }

    .resource {
        padding: 8px;
        margin-bottom: 6px;
    }

    .resource-name {
        font-size: 13px;
        min-width: 60px;
    }

    .control-btn {
        width: 16px;
        height: 16px;
        font-size: 15px;
    }

    .collected-input {
        min-width: 32px;
        font-size: 12px;
        padding: 4px;
    }

    .required-amount {
        font-size: 12px;
        min-width: 24px;
    }
}